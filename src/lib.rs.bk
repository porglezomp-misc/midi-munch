#[macro_use]
extern crate nom;

use nom::{be_u16, be_u32};

pub struct Header {
    len: u32,
    format: u16,
    tracks: u16,
    division: u16,
}

named!(header<&[u8], Header>,
  do_parse!(
    tag!(b"MThd") >>
    len: be_u32 >>
    format: be_u16 >>
    tracks: be_u16 >>
    division: be_u16 >>
    (Header {
        len: len,
        format: format,
        tracks: tracks,
        division: division,
    })
  )
);

